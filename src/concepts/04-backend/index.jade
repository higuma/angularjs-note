doctype
html
  head
    meta(charset="UTF-8")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.17/angular.min.js")
    script(src="finance3.js")
    script(src="invoice3.js")
  body
    div(ng-app="invoice3",ng-controller="InvoiceController as invoice")
      b Invoice: 
      div
        | Quantity: 
        input(type="number",ng-model="invoice.qty",required)
      div
        | Costs: 
        input(type="number",ng-model="invoice.cost",required)
        select(ng-model="invoice.inCurr")
          option(ng-repeat="c in invoice.currencies") {{c}}
      div
        b Total: 
        span(ng-repeat="c in invoice.currencies")
          | {{invoice.total(c) | currency:c}} 
        button.btn(ng-click="invoice.pay()") Pay
