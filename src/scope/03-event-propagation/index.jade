doctype
html
  head
    meta(charset="UTF-8")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.17/angular.min.js")
    script(src="script.js")
  body(ng-app="eventExample")
    div(ng-controller="EventController")
      | Root scope <tt>MyEvent</tt> count: {{count}}
      ul
        li(ng-repeat="i in [1]",ng-controller="EventController")
          button(ng-click="$emit('MyEvent')") $emit('MyEvent')
          button(ng-click="$broadcast('MyEvent')") $broadcast('MyEvent')
          br
          | Middle scope <tt>MyEvent</tt> count: {{count}}
          ul
            li(ng-repeat="item in [1, 2]",ng-controller="EventController")
              | Leaf scope <tt>MyEvent</tt> count: {{count}}
