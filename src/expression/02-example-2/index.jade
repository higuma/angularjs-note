doctype
html
  head
    meta(charset="UTF-8")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.17/angular.min.js")
    script(src="script.js")
  body(ng-app="expressionExample")
    div.expressions(ng-controller="ExampleController")
      | Expression: 
      input(type='text',ng-model="expr",size="80")
      button(ng-click="addExp(expr)") Evaluate
      ul
        li(ng-repeat="expr in exprs track by $index")
          | [
          a(href="",ng-click="removeExp($index)") X
          | ] 
          tt {{expr}}
          |  => 
          span(ng-bind="$parent.$eval(expr)")
