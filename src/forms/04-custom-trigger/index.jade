doctype
html
  head
    meta(charset="UTF-8")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.17/angular.min.js")
  body(ng-app,ng-init="user={}")
    div
      form
        | Name: 
        input(type="text",ng-model="user.name",ng-model-options="{updateOn:'blur'}")
        br
        | Other data: 
        input(type="text",ng-model="user.data")
      pre Name(trigger on blur) = "{{user.name}}"
      pre Other Data = "{{user.data}}"
